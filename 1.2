std::ifstream fin;
fin.open("E:\\Visual Studio Projects\\AoC.txt");

if (!fin.is_open())
  return -1;

int sum = 0;
while (fin.good())
{
  int local = 0;
  fin >> local;
    
  local /= 3;
  local -= 2;

  sum += local;

  while (local > 0)
  {
    local /= 3;
    local -= 2;

    sum += local > 0 ? local : 0;
  }
}
fin.close();
